TASK: Write a procedure that accepts emp_id and returns the yearly salary using an OUT parameter.

CREATE OR REPLACE PROCEDURE calc_yearly_salary(
  p_emp_id     IN  NUMBER,
  p_yearly     OUT NUMBER
)
AS
  v_monthly_salary NUMBER;
BEGIN
  SELECT salary INTO v_monthly_salary
  FROM employees
  WHERE employee_id = p_emp_id;

  p_yearly := v_monthly_salary * 12;

  DBMS_OUTPUT.PUT_LINE('Yearly salary for Employee ID ' || p_emp_id || ' is: ' || p_yearly);
EXCEPTION
  WHEN NO_DATA_FOUND THEN
    DBMS_OUTPUT.PUT_LINE('No employee found with ID: ' || p_emp_id);
    p_yearly := 0;
  WHEN OTHERS THEN
    DBMS_OUTPUT.PUT_LINE('Error: ' || SQLERRM);
    p_yearly := -1;
END;


-- TO execute the procedure
DECLARE
  v_yearly_salary NUMBER;
BEGIN
  calc_yearly_salary(101, v_yearly_salary);
  DBMS_OUTPUT.PUT_LINE('Returned yearly salary: ' || v_yearly_salary);
END;
